#:import utils kivy.utils

<DietPlanScreen>:

    FloatLayout:
        BoxLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#1a73e8")
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            padding: 20
            spacing: 20       
        GridLayout:
            rows:1
            pos_hint: {"top": 0.8, "left": 2}
            size_hint: 1, .4
            Label:
                text:'Diet Plan'
                bold: True
        BoxLayout:
           
            padding: 30
            RoundedButton:
                text: "KETO DIET"  
                bold: True
                font_size: self.width/35
                size_hint: 0.1, 0.1
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release:
                    app.change_screen("bmi_screen")
        BoxLayout:
           
            padding: 30
            RoundedButton:
                text: "FRUIT DIET"
                bold: True
                font_size: self.width/35
                size_hint: 0.1, 0.1
                pos_hint: {'center_x':.3, 'center_y': .3}
                on_release:
                    app.change_screen("ibw_screen")
        BoxLayout:
           
            padding: 30
            RoundedButton:
                text: "SALTLESS DIET"
                bold: True
                font_size: self.width/35
                size_hint: 0.1, 0.1
                pos_hint: {'center_x':.1, 'center_y': .1}
                on_release:
                    app.change_screen("summary_screen")



<RoundedButton@Button>
    background_color: (0,0,0,0.04)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (140, 140, 140, 0.3)
        Line:
            width:4
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
    

        